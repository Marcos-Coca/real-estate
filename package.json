{
  "name": "real-estate-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:ci": "jest --ci",
    "test:e2e": "npx playwright test",
    "lint:js": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:fix": "npm run lint:js -- --fix && npm run lint:css -- --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "commit": "npx git-cz",
    "storybook": "start-storybook -p 6006",
    "build-tokens": "style-dictionary build --config ./tokens/config.js",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "chromatic": "npx chromatic --project-token=f9b39b599295"
  },
  "dependencies": {
    "classnames": "^2.3.1",
    "just-compare": "^2.1.1",
    "next": "^13.0.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-svg": "^14.1.8"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "@playwright/test": "1.29.1",
    "@storybook/addon-actions": "^6.5.14",
    "@storybook/addon-essentials": "^6.5.14",
    "@storybook/addon-links": "^6.5.14",
    "@storybook/react": "^6.5.14",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "13.4.0",
    "@types/node": "16.11.6",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "babel-loader": "^8.2.3",
    "chromatic": "^6.5.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "7.32.0",
    "eslint-config-next": "^13.0.6",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-storybook": "^0.6.8",
    "eslint-plugin-testing-library": "5.9.1",
    "husky": "^7.0.4",
    "jest": "29.3.1",
    "jest-environment-jsdom": "29.3.1",
    "lint-staged": "^11.2.6",
    "prettier": "^2.4.1",
    "style-dictionary": "^3.0.3",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "^23.0.0",
    "stylelint-order": "^5.0.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "4.9.4"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,css,md,html,json}": "prettier --write",
    ".css": "stylelint --fix"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "selector-class-pattern": [
        "^[a-z][a-zA-Z0-9]*$",
        {
          "message": "Selector should be written in lower camel case (selector-class-pattern)"
        }
      ]
    },
    "plugins": [
      "stylelint-order"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
